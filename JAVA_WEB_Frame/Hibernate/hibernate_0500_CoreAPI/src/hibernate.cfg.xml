<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<!-- 必须配置 数据库连接的基本信息: -->
		<!-- 配置 数据库驱动 -->
		<property name="hibernate.connection.driver_class">
			com.mysql.jdbc.Driver
		</property>
		<!-- 配置 数据库路径 -->
		<property name="hibernate.connection.url">
			jdbc:mysql://localhost:3306/hib
		</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">123</property>
		<!-- Hibernate的方言 生成底层SQL不同的 -->
		<property name="hibernate.dialect">
			org.hibernate.dialect.MySQLDialect<!-- 这里使用mysql的方言 -->
		</property>

		<!-- 可选的属性 -->
		<!-- 显示SQL -->
		<property name="hibernate.show_sql">true</property>
		<!-- 格式化SQL -->
		<property name="hibernate.format_sql">true</property>
		<property name="hibernate.connection.autocommit">true</property>
		<!--  sesstion作用域 不配置getCurrentSession会报错 -->
        <property name="hibernate.current_session_context_class">thread</property>
		<!-- create 没表会自动创建 update 会自动更新表结构 createdrop 在显式关闭essionFactory 时，将删除掉数据库 
			schema。 validate 插入之前会验证表 -->
		<property name="hibernate.hbm2ddl.auto">update</property>
		<!-- 通知Hibernate加载那些映射文件 -->
		<mapping resource="com/bjsxt/hibernate/Student.hbm.xml" />
		<mapping class="com.bjsxt.hibernate.Teacher" />

	</session-factory>
</hibernate-configuration>